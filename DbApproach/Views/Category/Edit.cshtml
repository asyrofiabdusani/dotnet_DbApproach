@model DbApproach.Models.Category
@{
    ViewBag.Title = "Edit Category";
}

<h2 class="txt-center mb-5">Edit Category</h2>

<form method="post" action="/category/edit">
    <div class="d-grid grid-1-4 mb-3">
        <label class="col-form-label">Category Id/Code</label>
        <input type="number" class="form-control bg-disabled" name="CategoryId" value="@Model.CategoryId" readonly>
    </div>
    <div class="d-grid grid-1-4 mb-3">
        <label for="categoryName" class="col-form-label">Brand Name</label>
        <input type="text" class="form-control" id="categoryName" name="CategoryName" value="@Model.CategoryName">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/category">
        <button type="button" class="btn btn-outline-danger">
            Cancel
        </button>
    </a>
</form>
